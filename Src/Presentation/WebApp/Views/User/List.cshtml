@model IEnumerable<Nexawo.Application.Users.Queries.GetUsersListByTenant.UserDTO>

@{
    ViewData["Title"] = "List";
}

<div class="row">
    <div class="col-md-6">
    </div>
    <div class="col-md-6">
        <a asp-action="Add" class="btn btn-success float-md-right btn-sm"><i class="fa fa-plus"></i> Create A User</a>
    </div>
</div>
<hr />
<div class="row">
    <table class="table table-borderless table-responsive-md small">
        <thead>
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>            
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>                    
                </tr>
            }
        </tbody>
    </table>
</div>
