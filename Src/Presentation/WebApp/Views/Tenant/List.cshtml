@model IEnumerable<Nexawo.Application.Tenants.Queries.GetTenantsList.TenantDTO>


@{
    ViewData["Title"] = "List";
}
<div class="row">
    <div class="col-md-6">        
    </div>
    <div class="col-md-6">
        <a asp-action="Add" class="btn btn-success float-md-right btn-sm"><i class="fa fa-plus"></i> Create A Tenant</a>
    </div>
</div>
<hr />
<div class="row">
    <table class="table table-borderless table-responsive-md small">
        <thead>
            <tr>
                <th hidden>
                    @Html.DisplayNameFor(model => model.TenantId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DBConnection)
                </th>
                <th class="float-md-right">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.TenantId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DBConnection)
                    </td>
                    <td class="float-md-right">
                        @Html.ActionLink(" Edit", "Edit", new { id = item.TenantId }, new { @class = "fa fa-pen small" }) |
                        @Html.ActionLink(" Detail", "Detail", new { id = item.TenantId }, new { @class = "fa fa-eye small" }) |
                        @Html.ActionLink(" Delete", "Delete", new { id = item.TenantId }, new { @class = "fa fa-trash small" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
